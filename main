int menu() {
	int choice;
		cout << "\n\n\t====================================================\n"
			 << "\t\t\t\t  Main Menu\n"
			 << "\t====================================================\n"
			 << "\t\t 1) Create ticket\n"
			 << "\t\t 2) View tickets\n"
			 << "\t\t 3) Update ticket\n"
			 << "\t\t 4) Delete Ticket\n"
			 << "\t\t 5) Save and exit\n"
			 << "\t====================================================\n"
			 << " \n\t\t Please enter a selection: ";
			 
		cin >> choice;
		return choice;
}
	
