			queue <Technician> Techq;
			queue <Equipment> Equipq;
	do
	{
		userInput = menu();
		switch(userInput)
			{ 
				case 1: //addTicket();
					C1.setName();
					C1.setCustID();
					Custq.push(C1);
					
					T1.setName();
					T1.setID();
					T1.setLvl();
					Techq.push(T1);
					
